<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.indulge.freedom.who.view.CarouselView
        android:id="@+id/carouse_geogas_lv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <!--<com.indulge.freedom.who.view.HorizontalListView-->
            <!--android:id="@+id/id_listView_horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="85dp"-->
            <!--android:background="#fff"-->
            <!--android:scrollbars="none"-->
            <!--app:dividerWidth="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="10dp"/>-->
        <com.indulge.freedom.who.view.CenterLockHorizontalScrollview
            android:id="@+id/id_listView_horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#fff"
            android:scrollbars="none"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.indulge.freedom.who.view.CenterLockHorizontalScrollview>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_triangle"
                android:layout_width="36dp"
                android:layout_height="53dp"
                android:background="@drawable/shape_triangle"/>


            <ImageView
                android:layout_width="13dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="44dp"
                android:layout_alignRight="@id/iv_triangle"
                android:background="@drawable/point" />

        </RelativeLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#c8e5e5e5"/>

</LinearLayout>