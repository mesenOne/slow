<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_or_width_120dp"
    android:layout_height="@dimen/height_or_width_90dp"
    android:padding="@dimen/padding_all5" >

    <ImageView
        android:id="@+id/img_item_pic"
        android:layout_width="@dimen/height_or_width_80dp"
        android:layout_height="@dimen/height_or_width_60dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />
    <Button
        android:id="@+id/btn_item_delete"
        android:layout_width="@dimen/height_or_width_24dp"
        android:layout_height="@dimen/height_or_width_24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ico_pic_del" />

</RelativeLayout>