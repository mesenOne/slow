<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_layout_dialog_card_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_or_width_48dp"
        android:paddingLeft="@dimen/padding_16dp"
        android:textColor="@color/orange_app"
        android:textSize="@dimen/activity_18_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/views_above"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="3"
            android:background="@color/orange_app" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/height_divide_line"
            android:layout_weight="4"
            android:background="@color/color_divider" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_or_width_60dp"
        android:padding="@dimen/padding_16dp"
        android:textColor="@color/color_text_hint"
        android:textSize="@dimen/activity_16_size" />

    <LinearLayout
        android:id="@+id/ll_chose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_or_width_48dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>