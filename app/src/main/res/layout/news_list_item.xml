<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rl_list_item_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">


        <View
            android:id="@+id/view_gallery1"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="0.5dp"
            card_view:cardElevation="0dp"
            >

            <RelativeLayout
                android:layout_width="89dp"
                android:layout_height="74dp"
                android:gravity="center"
                android:layout_gravity="center">

                <com.indulge.freedom.who.view.movingimageviewlib.DexMovingImageView
                    android:id="@+id/id_index_gallery_item_image"
                    style="@style/DexScrollImageViewStyle"
                    android:layout_width="89dp"
                    android:layout_height="74dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" />

                <!--<com.indulge.freedom.who.view.CustomShapeImageView
                    android:id="@+id/id_index_gallery_item_image"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:imageBorderWidth="0dp"
                    app:borderColor="@color/transparent"
                    app:onlyDrawBorder="false"
                    app:roundRadius="3dp"
                    app:shape="rectangle"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"/>-->


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_gallery_bg" />

                <TextView
                    android:id="@+id/txt_gallery_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="演唱会"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/view_gallery2"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone" />

        <!--<TextView
            android:id="@+id/txtNewsSource"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="#64CBD8" />-->
    </LinearLayout>


</RelativeLayout>