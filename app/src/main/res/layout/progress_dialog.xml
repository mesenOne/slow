<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_or_width_200dp"
    android:layout_height="@dimen/height_or_width_200dp"
    android:background="@drawable/shape_layout_dialog_card_bg"
    android:padding="@dimen/padding_16dp"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/loadingIv"
        android:layout_width="@dimen/height_or_width_80dp"
        android:layout_height="@dimen/height_or_width_80dp"
         />

    <TextView
        android:id="@+id/loadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadingIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/activity_20_size" />

</RelativeLayout>