<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_divide_line"
        android:background="@color/color_divider" />

    <RadioGroup
        android:id="@+id/base_ragroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_btn"
        android:layout_below="@id/view_line"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <com.indulge.freedom.who.view.DoubleClickRadioButton
            android:id="@+id/rbt_car_peccancy"
            style="@style/base_bottom_btn_style"
            android:drawablePadding="@dimen/padding_base_bottom"
            android:drawableTop="@drawable/selector_base_layout_bottom_rabtn_1"
            android:paddingBottom="@dimen/padding_base_bottom"
            android:paddingTop="@dimen/padding_base_bottom"
            android:text="@string/base_bottom_1"
            android:textColor="@color/selector_base_layout_bottom_text_color"
            android:textSize="@dimen/activity_12_size" />

        <com.indulge.freedom.who.view.DoubleClickRadioButton
            android:id="@+id/rbt_car_stage"
            style="@style/base_bottom_btn_style"
            android:drawablePadding="@dimen/padding_base_bottom"
            android:drawableTop="@drawable/selector_base_layout_bottom_rabtn_3"
            android:paddingBottom="@dimen/padding_base_bottom"
            android:paddingTop="@dimen/padding_base_bottom"
            android:text="@string/base_bottom_2"
            android:textColor="@color/selector_base_layout_bottom_text_color"
            android:textSize="@dimen/activity_12_size" />


        <com.indulge.freedom.who.view.DoubleClickRadioButton
            android:id="@+id/rbt_mine"
            style="@style/base_bottom_btn_style"
            android:drawablePadding="@dimen/padding_base_bottom"
            android:drawableTop="@drawable/selector_base_layout_bottom_rabtn_4"
            android:paddingBottom="@dimen/padding_base_bottom"
            android:paddingTop="@dimen/padding_base_bottom"
            android:text="@string/base_bottom_3"
            android:textColor="@color/selector_base_layout_bottom_text_color"
            android:textSize="@dimen/activity_12_size" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_btn"
        android:background="@color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:weightSum="4" >

        <Button
            android:id="@+id/btn_car_stage"
            style="@style/btn_usedCar_style" />

        <Button
            android:id="@+id/btn_car_peccancy"
            style="@style/btn_usedCar_style" />

        <Button
            android:id="@+id/btn_mine"
            style="@style/btn_usedCar_style" />
    </LinearLayout>

</RelativeLayout>