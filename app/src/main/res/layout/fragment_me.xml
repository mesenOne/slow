<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

        
        <LinearLayout
            android:id="@+id/ll_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/height_status_bar"
            android:orientation="vertical" >
            
            <LinearLayout 
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:gravity="center">
	            <com.indulge.freedom.who.view.CircleImageView
	                android:id="@+id/img_user_head"
	                android:layout_width="80dp"
	                android:layout_height="80dp"
	                android:src="@drawable/touxiang" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_header_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/ll_me_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:text="我的页面"
                        android:textColor="@color/color_header_text" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/height_divide_line"
                    android:layout_height="40dp"
                    android:background="@color/color_header_text" />

                <LinearLayout
                    android:id="@+id/ll_release_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:textColor="@color/color_header_text" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/height_divide_line"
                    android:layout_height="40dp"
                    android:background="@color/color_header_text" />

                <LinearLayout
                    android:id="@+id/ll_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:text="阿飞jdlkaf"
                        android:textColor="#f00" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



</LinearLayout>