	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<com.indulge.freedom.who.view.panningview.library.PanningView
			android:id="@+id/panningView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			custom:panningDurationInMs="100000"
			android:src="@drawable/newyok3_webp"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#9f3367d5"/>

		<!--#ae387593--> <!--a1387593-->
	</RelativeLayout>



	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="top"
			android:layout_marginTop="20dp"
			android:gravity="center_horizontal">


			<LinearLayout
				android:id="@+id/ll_who"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="25dp"
				android:visibility="gone"
				android:gravity="center"
				android:padding="30dp">
				<TextView
					android:id="@+id/tv_title_login_w"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="w"
					android:visibility="visible"
					android:textSize="50sp"
					android:textStyle="bold"
					android:shadowRadius="3"
					android:shadowDx="20"
					android:shadowDy="-15"
					android:shadowColor="#FD215B78"
					android:textColor="@color/white"/>
				<TextView
					android:id="@+id/tv_title_login_h"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="h"
					android:textSize="50sp"
					android:textStyle="bold"
					android:visibility="visible"
					android:textColor="@color/white"
					android:shadowRadius="3"
					android:shadowDx="20"
					android:shadowDy="-15"
					android:shadowColor="#FD215B78"/>
				<TextView
					android:id="@+id/tv_title_login_o"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="o"
					android:paddingRight="5dp"
					android:textSize="50sp"
					android:textStyle="bold"
					android:visibility="visible"
					android:textColor="@color/white"
					android:shadowRadius="3"
					android:shadowDx="20"
					android:shadowDy="-15"
					android:shadowColor="#FD215B78"
					/>
			</LinearLayout>

			<!--<LinearLayout-->

				<!--android:layout_width="match_parent"-->
				<!--android:layout_height="wrap_content">-->
				<!--<TextView-->
					<!--android:id="@+id/txt_who"-->
					<!--android:gravity="center"-->
					<!--android:layout_weight="1"-->
					<!--android:padding="30dp"-->
					<!--android:textSize="50sp"-->
