<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_used_car_adapter_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selector_cardview"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="3dp">


        <!--<View-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="@color/gray_bg" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="13dp"
                android:paddingTop="13dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.indulge.freedom.who.view.roundedimageview.RoundedImageView
                            android:id="@+id/imageView1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="false"
                            android:src="@drawable/test_touxiang"
                            app:riv_border_color="#fff"
                            app:riv_border_width="2dp"
                            app:riv_corner_radius="3.2dp"
                            app:riv_mutate_background="false"
                            app:riv_oval="false" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/louzhu2">

                        </ImageView>

                    </RelativeLayout>


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="生活家Mesen"
                    android:textColor="@color/black"
                    android:textSize="14.5sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:text="5小时前"
                    android:textColor="#FFBDBDBD"
                    android:textSize="12sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_geogas_item_carouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="320dp"
                    android:scaleType="centerCrop" />


                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/test_header2"/>-->

                <TextView
                    android:id="@+id/txt_s_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_bg_label"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="美食"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <!--<View
            com.indulge.freedom.who.view.movingimageviewlib.DexMovingImageView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/test_header" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_product_item_title_chinese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="上海最神秘小岛-枸杞岛"
                        android:textColor="#e2000000"
                        android:textSize="14sp" />
                    <!--c9494949-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Tibidabo Amusement Park Life Openstyle"
                        android:textColor="#d84d4d4d"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <!--10月3日●世博展览馆-->
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/shape_bg_headimage"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/qizi3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="参与"
                        android:textColor="#e2000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical">


                    <com.indulge.freedom.who.view.roundedimageview.RoundedImageView
                        android:id="@+id/imageView3"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/shape_bg_headimage_more"
                        android:src="@drawable/test_touxiang3"
                        app:riv_border_color="#fff"
                        app:riv_border_width="0.7dp"
                        app:riv_corner_radius="2dp"
                        app:riv_mutate_background="false"
                        app:riv_oval="false" />


                    <com.indulge.freedom.who.view.roundedimageview.RoundedImageView
                        android:id="@+id/imageView2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="6dp"
                        android:adjustViewBounds="false"
                        android:src="@drawable/test_touxiang2"
                        app:riv_border_color="#fff"
                        app:riv_border_width="0.7dp"
                        app:riv_corner_radius="2dp"
                        app:riv_mutate_background="false"
                        app:riv_oval="false" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.indulge.freedom.who.view.roundedimageview.RoundedImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/test_touxiang"
                            app:riv_border_color="#fff"
                            app:riv_border_width="0.7dp"
                            app:riv_corner_radius="2dp"
                            app:riv_mutate_background="false"
                            app:riv_oval="false" />

                        <!--<ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/louzhu2">-->

                        <!--</ImageView>-->

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_bg_headimage"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+17"
                            android:textColor="@color/gray_bg_light"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:gravity="right|center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/floor1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="259F"
                            android:textColor="#787878"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/shape_bg_comment"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:text="跟帖"
                    android:textColor="#e2000000"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="27dp"
                    android:background="#4aaeaeae" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="我想说点什么..."
                    android:textColor="@color/gray_bg_light"
                    android:textSize="13sp" />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.2dp"-->
            <!--android:background="#a7e5e5e5"/>-->

        </LinearLayout>
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:background="#a7e5e5e5"/>-->

    </android.support.v7.widget.CardView>


</LinearLayout>